@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SelectList

<div class="container">
    <div class="row d-flex justify-content-center pt-5">
        <div class="col-md-6">
            <form asp-action="SendMoney" method="post" asp-controller="Account">

                <div class="form-group">
                       <b>Hesap Bakiyesi: <mark> @ViewBag.Balance </mark> </b>
                </div>
                <div class="form-group">
                    <input type="hidden" name="senderId" value="@ViewBag.SenderId" />
                    <label class="form-label" for="receiverId">
                        Gönderilecek Hesap Numarası
                    </label>
                    <select id="receiverId" name="receiverId" class="form-control" asp-items="@Model">
                    </select>
                </div>
                <div class="form-group">
                    <label for="amount">
                        Göndermek istediğiniz para Miktarı
                    </label>
                    <input type="number" step="0.001" name="amount" id="amount" class="form-control text-danger" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Gönder</button>
                </div>

            </form>
        </div>
    </div>

</div>

@model List<AccountListModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Kullanıcı Bilgileri
            </div>
            <div class="card-body">
                Adı : @ViewBag.FullName
            </div>
        </div>
    </div>
    @if (Model.Count > 0)

    {
        <div class="col-md-6">
            @foreach (var bankAccount in Model)
            {

                <div class="card">
                    <div class="card-header">
                        Hesap Numarası : @bankAccount.AccountNumber
                    </div>
                    <div class="card-body">
                        Hesap Bakiyesi : @bankAccount.Balance
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary" asp-action="SendMoney" asp-controller="Account" asp-route-accountId="@bankAccount.Id">Bu hesaptan para gönder</a>
                    </div>
                </div>


            }
        </div>
    }
    else
    {
        <div class="col-md-6">
            <div class="alert alert-info text-lead">
                Kullanıcı hesabı yok
            </div>
        </div>

    }



</div>
